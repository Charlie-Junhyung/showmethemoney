<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="activity"
            type="charlie.showmethemoney.PlayActivity"/>
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textMathInfo"
            android:textAlignment="viewEnd"
            android:textSize="21sp"
            android:textColor="#555"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:id="@+id/textCompetitor1"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:src="@drawable/c0"
            android:id="@+id/imageCompetitor1"
            android:labelFor="@id/textCompetitor1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="@string/versus"
            android:textColor="#000"
            android:textSize="21sp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:id="@+id/textCompetitor2"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/imageCompetitor2"
            android:src="@drawable/c1"
            android:layout_weight="6"
            android:labelFor="@id/textCompetitor2"/>
    </LinearLayout>
</layout>